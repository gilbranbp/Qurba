<div class="modal-dialog modal-m">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Item</h5>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="alert alert-warning alert-dismissible fade show" id="alertEmpty" role="alert" style="display: none;">
                <strong>Warning!</strong> Please fill in all input below.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="" action="#">
                <!-- <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">File Name<span class="text-danger"></span></label>
                    <input type="text" name="file_uploads"  class="form-control" required placeholder="File" id="file_uploads">
                </div> -->
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Item Name<span class="text-danger"></span></label>
                    <div class="col-sm-8">
                        <input type="text" name="item_name" class="form-control" required placeholder="Books, T-Shirt, Chicken Wings, etc." id="i_item_name">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Price<span class="text-danger"></span></label>
                    <div class="col-sm-8">
                        <input type="text" name="item_price" class="form-control" required placeholder="10.00" id="i_item_price">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Category<span class="text-danger"></span></label>
                    <div class="col-sm-8">
                        <select class="filter text-basic" name="i_item_category" id="i_item_category" style="width: 100%;">
                            <option></option>
                            <option value="Food and Beverages">Food and Beverages</option>
                            <option value="Fashion">Fashion</option>
                            <option value="Book">Book</option>
                            <option value="Sport">Sport</option>
                            <option value="Handphone and Tablet">Handphone and Tablet</option>
                            <option value="Cosmetics and Body Care">Cosmetics and Body Care</option>
                            <option value="Health and Wellness">Health and Wellness</option>
                            <option value="Automotive">Automotive</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Description<span class="text-danger"></span></label>
                    <div class="col-sm-8">
                        <input type="text" name="item_description" class="form-control" required placeholder="The most delicious food in UUM!" id="i_item_description">
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Image<span class="text-danger"></span></label>
                    <input type="file" id="upload_file" class="col-form-label col-sm-8" required/>        
                </div>
            </form>
           
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">
                <i class="font-size-base mr-1"></i> Cancel
            </button>
            <button class="btn btn-success ml-1" id="btn_add_to_folder_n_database">Add</button>
        </div>
    </div>
</div>