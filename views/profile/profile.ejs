<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../layouts/head %>
	<link rel="stylesheet" href="/global_assets/plugins/ag-grid-community/dist/styles/ag-grid.css">
	<link rel="stylesheet" href="/global_assets/plugins/ag-grid-community/dist/styles/ag-theme-alpine.css">
</head>
<style>
	
	.ag-cell-label-container, .ag-header-icon {
		color: #4d5763;
	}

	.ag-header-row {
		background-color: #FFF;
	}

	.ag-root-wrapper {
		border-radius: 5px;
	}
	
	.ag-theme-alpine .ag-root-wrapper {
		border: none;
	}
	
	[class^='select2'] {
		border-radius: 5px !important;
	}

	.select2-container--focus:not(.select2-container--disabled) .select2-selection--single:not(.select2-filled), .select2-container--open .select2-selection--single:not(.select2-filled) {
		border: 1px solid #EEEEEE;
		box-shadow: 0px 4px 4px rgba(255, 59, 59, 0.25);
	}

	.select2-selection--single{
		color: #70798B !important;
		font-size: 12px;
	}
	
	.searchInput {
		width: 100%;
		padding: 0.5rem 1rem;
		font-size: 12px;
		border-radius: 5px;
		border: 1px solid #EEEEEE;
		background-color: #FDFDFD;
		height: -webkit-fill-available;
	}

	.totalItem {
		width: 40%;
		padding: 0.5rem 1rem;
		font-size: 12px;
		border-radius: 5px;
		border: 1px solid #EEEEEE;
		background-color: #FDFDFD;
		height: -webkit-fill-available;
	}

	img {
		width: 100%;
		height: auto;
	}

	.item-image {
		border-radius: 10px;
		max-width: 100%;
  		height: auto;
	}

</style>

<body>
	<!-- Page content -->
	<div class="page-content">
		<% include ../layouts/sidebar %>

		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Inner content -->
			<div class="content-inner">

				<!-- Content area -->
				<div class="content" style="margin: 16px;">

					<div class="row">
						<div class="col-12">
							<a href="/store" class="d-inline-block">
								<img src="/global_assets/images/qurba.png" class="d-none d-sm-block" alt="" style="height: 3rem;">
								<!-- <img src="/global_assets/images/telkomsel.png" class="d-none d-sm-block" alt="" style="height: 2.125rem;"> -->
								<!-- <img src="/global_assets/images/lgwhite.png" class="pt-1 d-sm-none" alt="" style="height: 2.125rem;"> -->
							</a>
						</div>
					</div>

					<br>

					<div class="row" style="height: 75vh; align-items: center;">
						<div class="col-12">
							<div class="card" style="margin: auto; width: 75vw;">
								<div class="card-body">
									<nav>
										<div class="nav nav-tabs" id="nav-tab" role="tablist">
										  <a class="nav-item nav-link active" id="nav-1-tab" data-toggle="tab" href="#nav-1" role="tab" aria-controls="nav-1" aria-selected="true">Profile</a>
										  <a class="nav-item nav-link" id="nav-2-tab" data-toggle="tab" href="#nav-2" role="tab" aria-controls="nav-2" aria-selected="false">Agent</a>
										</div>
									</nav>
									<div class="tab-content" id="nav-tabContent">
										<div class="tab-pane fade show active" id="nav-1" role="tabpanel" aria-labelledby="nav-1-tab">
											<div class="row">
												<div class="col-12">
													<div class="card shadow-none">
														<div class="card-body">
															<div class="form-group row mb-2">
																<label class="col-form-label col-sm-3">Name<span class="text-danger"></span></label>
																<div class="col-lg-9">
																	<input class="searchInput" id="i_name" type="text" name="search" placeholder="Name">
																</div>
															</div>
															<div class="form-group row mb-2">
																<label class="col-form-label col-sm-3">Email<span class="text-danger"></span></label>
																<div class="col-lg-9">
																	<input class="searchInput" id="i_email" type="text" name="search" placeholder="Email">
																</div>
															</div>
															<div class="form-group row mb-2">
																<label class="col-form-label col-sm-3">Phone No.<span class="text-danger"></span></label>
																<div class="col-lg-9">
																	<input class="searchInput" id="i_phone" type="text" name="search" placeholder="Phone No.">
																</div>
															</div>

															<br>

															<div class="mt-1" id="update_msg">Please fill in all input!</div>
															<div class="d-flex justify-content-end align-items-center m-0">
																<button class="btn btn-primary ml-1" id="btn_update">Update</button>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										
										<div class="tab-pane fade" id="nav-2" role="tabpanel" aria-labelledby="nav-2-tab">
											<div class="row">
												<div class="col-12">
													<div class="card shadow-none">
														<div class="card-body">
															<div class="d-flex justify-content-end align-items-center m-0">
																<button class="btn btn-success ml-1" id="btn_add_agent">Add Agent</button>
																<div id="modal_add_agent" class="modal fade" data-backdrop="static"></div>
															</div>
															<br>
															<div id="tbl_agent" style="height: 50vh;" class="ag-theme-alpine"></div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				<!-- /content area -->
				</div>
			</div>
			<!-- /inner content -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

	<script src="/scr/profile/profile.js"></script>

	<script src="/global_assets/plugins/forms/validation/validate.min.js"></script>
	<script src="/global_assets/plugins/notifications/sweet_alert.min.js"></script>
	
	<script src="/global_assets/plugins/ag-grid-enterprise/dist/ag-grid-enterprise.min.noStyle.js"></script>
	<script src="/global_assets/plugins/select2/select2.min.js"></script>

</body>

</html>
