<!DOCTYPE html>
<html lang="en">
<head>
    <title>login</title>
    <link rel="icon" href="/global_assets/images/favicon.png" type="image/x-icon" />

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="/global_assets/css/icons/icomoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/custom.css" rel="stylesheet" type="text/css">
    <link href="/global_assets/plugins/extras/animate.min.css" rel="stylesheet" type="text/css">
    <script src="/assets/js/jquery.min.js"></script>
</head>

<style>
    @media (min-width:769px) and (max-width:1024px){
        .login_card{
          display: flex;
          justify-content: center;
        } 
        
    }
</style>

<body class="bg-secondary">

  <!-- Page content -->
	<div class="page-content login-cover">

		<!-- Main content -->
		<div class="content-wrapper d-flex justify-content-center">

			<!-- Inner content -->
			<div class="content-inner">

				<!-- Content area -->
				  <!-- <div class="content d-flex justify-content-end align-items-center login_card"> -->
				  <div class="content d-flex justify-content-center align-items-center login_card">
            
            <div class="col-12 col-md-4">
                <form>
                      <div class="card text-white mb-0 animated zoomIn " style="background-color: #02133fc2; ">
                          <div class="card-header d-flex justify-content-center align-items-center">
                            <img src="/global_assets/images/tel_2.png" height="50" alt="logo" class="auth-logo">
                          </div>
                          <div class="card-body ">

                              <fieldset class="border border-secondary p-3">
                                <legend class="w-auto font-weight-bold pb-0 mb-0 text-secondary"><h4 class="text-white text-center ">Service Orchestration</h4>  </legend>
                                <!-- <legend class="w-auto font-weight-bold pb-0 mb-0 text-secondary"><img src="/global_assets/images/tel_2.png" height="50" alt="logo" class="auth-logo"></legend> -->
                                <!-- <span class="d-block text-muted text-left mb-3">Login to your account</span> -->
              
                                <div class="form-group form-group-feedback form-group-feedback-left">
                                    <input type="text" class="form-control"  aria-describedby="emailHelp" name="username" placeholder="Username">
                                    <div class="form-control-feedback">
                                      <i class="icon-user text-muted"></i>
                                    </div>
                                </div>
        
                                <div class="form-group form-group-feedback form-group-feedback-left">
                                    <input type="password" class="form-control" name="password" placeholder="Password" autocomplete="password">
                                    <div class="form-control-feedback">
                                      <i class="icon-lock2 text-muted"></i>
                                    </div>
                                    <div class="mt-1" id="err" style="display:none"></div>
                                </div>
        
                                <button type="button" class="btn btn-custom-primary" id="login">Login</button>
                            </fieldset>
                          </div>
                      </div>
                </form>
            </div>

          </div>
        <!-- /content area -->
      </div>
      <!-- /inner content -->
    </div>
    <!-- /main content -->
  </div>
  <!-- /page content -->

    <script src="/scr/login/login.js"></script>
</body>
</html>
